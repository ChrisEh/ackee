@if (Percentage != -1)
{
    <div class="progress text-center">
        <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: @(Percentage)%" aria-valuenow="@Percentage" aria-valuemin="0" aria-valuemax="100">
            @if (Percentage > 0)
            {
                @Label
            }
        </div>
    </div>
}
        else
        {
<div class="progress text-center" style="width: 100%">
    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: @(CalculatePercentage())%" aria-valuenow="@CalculatePercentage()" aria-valuemin="0" aria-valuemax="100">
        @if (CalculatePercentage() > 0)
        {
            @Label
        }
    </div>

</div>
}



@code {
    [Parameter]
    public int Percentage { get; set; } = -1;

    [Parameter]
    public int Total { get; set; }

    [Parameter]
    public int Completed { get; set; }

    [Parameter]
    public string Label { get; set; }

    private int CalculatePercentage()
    {
        if (Total > 0)
        {
            return (int)((double)Completed / Total * 100);
        }

        return 0;
    }
}
