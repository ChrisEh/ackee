<div class="topMenu">
    <div class="topMenu_container @(!IsUserAuthenticated ? "topMenu_container__landingPage" : "")">
        <div class="topMenu_hamburgerAndLogoContainer">
            <div id="menu-toggle" class="@(_isMenuExpanded ? "open" : "")" @onclick="ToggleMenu">
                <div id="hamburger">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
                <div id="cross">
                    <span></span>
                    <span></span>
                </div>
            </div> 
            <div class="topMenu_logo">
                <a href="/">ACKEE</a>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public bool IsUserAuthenticated { get; set; }

    private bool _isMenuExpanded = false;

    private void ToggleMenu ()
    {
        _isMenuExpanded = !_isMenuExpanded;
    }
}
