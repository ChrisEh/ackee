@using Ackee.Data.Model
@inject Ackee.Shared.Services.StringManipulationService StringManipulationService
@inject Microsoft.AspNetCore.Components.NavigationManager NavigationManager

<div class="leftMenu">
    <div class="leftMenu_projectIcon">
        @if (project != null)
        {
            <h1>@StringManipulationService.GetStringAbbreviation(project.ProjectName)</h1>
        }
        @*else
        {
            <p>Loading...</p>
        }*@
    </div>
    @if (project != null)
    {
        <p class="leftMenu_projectName">@project.ProjectName</p>
    }
    <div class="leftMenu_navigation">
        <ul>
            <li class='@(PageName.Equals("dashboard") ? "active" : "")' @onclick='() => NavigateToProjectPage("")'>Dashboard</li>
            <li class='@(PageName.Equals("calendar") ? "active" : "")' @onclick='() => NavigateToProjectPage("calendar")'>Calendar</li>
            <li class='@(PageName.Equals("tasks") ? "active" : "")' @onclick='() => NavigateToProjectPage("tasks")'>Tasks</li>
            <li class='@(PageName.Equals("files") ? "active" : "")' @onclick='() => NavigateToProjectPage("files")'>Files</li>
            <li class='@(PageName.Equals("communication") ? "active" : "")' @onclick='() => NavigateToProjectPage("communication")'>Communication</li>
            <li class='@(PageName.Equals("progress") ? "active" : "")' @onclick='() => NavigateToProjectPage("progress")'>Progress</li>
            <li class='@(PageName.Equals("settings") ? "active" : "")' @onclick='() => NavigateToProjectPage("settings")'>Settings</li>
        </ul>
    </div>
</div>

@code {
    [Parameter]
    public string ProjectId { get; set; }

    [Parameter]
    public string PageName { get; set; }

    private AspNetProjects project = null;

    // Get project object by project ID. If loaded, display it.
    protected override async Task OnInitializedAsync()
    {
        await RefreshProject();
    }

    private async Task RefreshProject()
    {
        project = await (new HttpClient()).GetJsonAsync<AspNetProjects>($"http://localhost:53508/api/projects/{ProjectId}");
        StateHasChanged();
    }

    private void NavigateToProjectPage(string pageName)
    {
        NavigationManager.NavigateTo($"/project/{ProjectId}/{pageName}");
    }
}
